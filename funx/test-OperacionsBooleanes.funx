
Fibo n {
    if n == 0 or n == 1 {n}
    (Fibo n - 1) + (Fibo n - 2)
}


SigneIgual x y {
    if x > 0 <-> y > 0 {1}
    0
}

Entre1i10 x {
    if x >= 1 and x <= 10 {x}
    -1
}

Entre1i10Dos x {
    if not ((Entre1i10 x) == -1) {x*2}
    -1
}

